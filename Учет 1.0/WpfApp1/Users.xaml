        <ComboBox x:Name="comPostAdd" HorizontalAlignment="Left" Margin="644,290,0,0" VerticalAlignment="Top" Width="115" Height="43" SelectionChanged="comPostAdd_SelectionChanged" SelectedIndex="0">
